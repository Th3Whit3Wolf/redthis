{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run database",
      "type": "docker-run",
      "dockerRun": {
        "image": "surrealdb/surrealdb:latest",
        "ports": [
          {
            "containerPort": 8000,
            "hostPort": 8000
          }
        ],
        "containerName": "redthis-db",
        "remove": true,
        "command": "start --log=trace --user=root --pass=root -s memory"
      },
      "runOptions": {
        "runOn": "folderOpen",
      },
      "presentation": {
        "group": "dev"
      }
    },
    {
      "label": "Run server (dev)",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "âš¡Vite dev server running at:",
            "endsPattern": "ready in \\d+ms"
          }
        }
      ],
      "presentation": {
        "group": "dev",
        "reveal": "never"
      },
      "runOptions": {
        "runOn": "folderOpen",
      }
    },
  ]
}